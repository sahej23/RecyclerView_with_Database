<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0ffae"
    tools:context="com.example.baggas.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDENT MANAGEMENT SYSTEM"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:background="#7de971"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/addstudentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:background="#84df78"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/displaystudentbtn"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="#84df78"
            android:text="DISPLAY"
            android:layout_gravity="center" />

    </LinearLayout>


</RelativeLayout>
